[Unit]
Description=Pi-Guy Dashboard Backend
After=network.target

[Service]
Type=simple
User=%u
Environment=PIGUY_HOME=%h/piguy
Environment=PIGUY_ENV=prod
Environment=PIGUY_AUDIO_DEVICE=default
EnvironmentFile=/etc/piguy/piguy.env
EnvironmentFile=-%h/piguy/.env
WorkingDirectory=%h/piguy
ExecStart=/usr/bin/env bash -lc 'exec "${PIGUY_HOME}/start-server.sh"'
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
